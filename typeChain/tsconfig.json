{
  "include": ["src"],
  "compilerOptions": {
    //내보낸 모든 파일의 출력 폴더를 지정합니다.
    "outDir": "build",
    //내보낸 JavaScript에 대한 JavaScript 언어 버전을 설정하고 호환되는 라이브러리 선언을 포함합니다.
    "target": "es6",
    //대상 런타임 환경을 설명하는 번들 라이브러리 선언 파일 집합을 지정합니다.
    //타입스크립트에게 작성된 코드가 어디서 실행될지 알려줌
    "lib": ["ES6", "DOM"],
    //모든 엄격한 타입 검사 옵션을 활성화
    //strict 플래그는 프로그램 정확성을 더 강력하게 보장하는 광범위한 타입 검사 동작을 가능하게 함
    "strict": true
  }
}
